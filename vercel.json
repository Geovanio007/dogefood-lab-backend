{
  "name": "dogefood-lab",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo_url",
    "DB_NAME": "dogefood_production",
    "CORS_ORIGINS": "*",
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token"
  },
  "functions": {
    "backend/server.py": {
      "maxDuration": 30
    }
  }
}